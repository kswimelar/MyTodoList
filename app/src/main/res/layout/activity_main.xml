<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTask"
            android:hint="Enter Task Name" android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtMessage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtMessage"
            android:hint="Enter Task Description"
            app:layout_constraintStart_toStartOf="@+id/txtTask"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTask" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMessage"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMessage"
            app:layout_constraintTop_toBottomOf="@+id/txtMessage" android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtNotes"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtNotes"
            app:layout_constraintTop_toBottomOf="@+id/btnMessage" android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="57dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="57dp" android:layout_marginEnd="57dp" android:layout_marginRight="57dp"/>
</android.support.constraint.ConstraintLayout>